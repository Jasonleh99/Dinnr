<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csulb.cecsymemeteam.dinnr.MoreReviewsActivity">

    <ImageView
        android:id="@+id/backgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/MintCream"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/reviewsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:text="@string/reviews"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <Spinner
            android:id="@+id/filterBySpinner"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/reviewListContainer"
            android:layout_alignParentEnd="true"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="24dp" />

        <TextView
            android:id="@+id/writeReviewTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/reviewListContainer"
            android:layout_below="@+id/reviewListContainer"
            android:clickable="true"
            android:onClick="writeReview"
            android:text="@string/write_review"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="498dp" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/reviewListContainer"
            android:layout_below="@+id/reviewListContainer"
            android:onClick="goBack"
            android:text="@string/back"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="501dp" />

        <ScrollView
            android:id="@+id/reviewListContainer"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignStart="@+id/reviewsTxt"
            android:layout_below="@+id/reviewsTxt"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="48dp">

            <LinearLayout
                android:id="@+id/reviewsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
